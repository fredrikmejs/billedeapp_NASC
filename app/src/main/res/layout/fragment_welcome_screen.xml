<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.WelcomeScreen">

    <TextView
        android:id="@+id/textView_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="Velkommen"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_truckNumber"
        android:layout_width="154dp"
        android:layout_height="41dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="Bil nummer"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_welcome_text" />

    <Button
        android:id="@+id/button_welcomePage"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="180dp"
        android:text="ForsÃ¦t"
        app:layout_constraintStart_toEndOf="@+id/edittext_truckNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView_welcome_text" />

</androidx.constraintlayout.widget.ConstraintLayout>

